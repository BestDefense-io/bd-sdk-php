{
    "name": "bestdefense-io/bd-sdk-php",
    "description": "BestDefense.io - PHP SDK",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BestdefenseIo\\BdSdkPhp\\": "src/",
            "BestdefenseIo\\BdSdkPhp\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Dan Baddeley JR",
            "email": "dan.baddeley@bestdefense.io"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "BestdefenseIo\\BdSdkPhp\\Providers\\ApiServiceProvider"
            ]
        }
    },
    "minimum-stability": "alpha",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/promises": "^2.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "systemhaus/guzzle-http-mock": "^2.1"
    },
    "scripts": {
        "test": "phpunit --no-coverage"
    }
}
